{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "./webpack.config.js",
    "./jest.config.js",
    "node_modules",
    "lib",
    "lib-esm",
    "_bundles",
    "src/**/*.test.ts"
  ]
}
